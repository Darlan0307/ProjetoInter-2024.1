generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Model dos produtos
model product{
  id String @id @default(uuid()) @map("_id")
	name String @unique
  urlImage String
	description String
	category String
  gender String
  price  Float
  quantity Int
	created_at DateTime? @default(now())
}

// Model dos usu√°rios
model user{
	id String @id @default(uuid()) @map("_id") @db.ObjectId
  admin Boolean @default(false)
	name String
	email String @unique
	password String
	created_at DateTime? @default(now()) 
}

