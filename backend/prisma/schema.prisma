generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Model dos produtos
model product{
  id String @id @default(uuid()) @map("_id")
	name String @unique
  urlImage String
  publicId String
	description String
	category String
  gender String
  price  Float
  quantity Int
	created_at DateTime? @default(now())
}

